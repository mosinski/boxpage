<div class="container">
  <div class="login-container">
    <div id="devise_errors"></div>
    <div class="avatar"></div>
    <div class="form-box">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: "sign_in_user"}, format: :json, remote: true) do |f| %>
        <%= f.text_field :login, autofocus: true, placeholder: "E-mail or Username" %>

        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>

        <%= f.submit "Login", class: "btn btn-info btn-block login" %>

        <% if devise_mapping.rememberable? %>
          <div class="text-left">
            <%= f.check_box :remember_me, checked: true %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      <% end %>

      <div class="shared_links">
        <% if devise_mapping.registerable? && controller_name != 'registrations' %>
          <div class="text-right">
            <%= link_to "Sign up", new_registration_path(resource_name) %>
          </div>
        <% end %>
        <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <br><br>
          <div class="text-center">
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>